<serviceGroup>

    <service name="APIKeyMgtSubscriberService" scope="transportsession">
        <transports><transport>https</transport></transports>
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true" />
        <description>API Key Mgt functionality related to application developers.</description>
        <parameter name="ServiceClass">org.wso2.carbon.apimgt.keymgt.service.APIKeyMgtSubscriberService</parameter>
        <parameter name="DoAuthentication" locked="true">true</parameter>
        <parameter name="AuthorizationAction" locked="true">/permission/admin/login</parameter>
    </service>

    <service name="APIKeyMgtProviderService" scope="transportsession">
        <transports><transport>https</transport></transports>
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true" />
        <description>API Key Mgt functionality related to API providers who publish their APIs in API Store.</description>
        <parameter name="ServiceClass">org.wso2.carbon.apimgt.keymgt.service.APIKeyMgtProviderService</parameter>
        <parameter name="DoAuthentication" locked="true">true</parameter>
        <parameter name="AuthorizationAction" locked="true">/permission/admin/login</parameter>
    </service>

    <service name="APIKeyValidationService" scope="transportsession">
        <transports><transport>https</transport></transports>
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true" />
        <description>API Key validation functionality required by the API Gateway.</description>
        <parameter name="ServiceClass">org.wso2.carbon.apimgt.keymgt.service.APIKeyValidationService</parameter>
        <parameter name="DoAuthentication" locked="true">true</parameter>
        <parameter name="AuthorizationAction" locked="true">/permission/admin/manage</parameter>
    </service>

    <parameter name="adminService" locked="true">true</parameter>
    <parameter name="hiddenService" locked="true">true</parameter>
</serviceGroup>
